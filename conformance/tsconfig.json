{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "ES2019",
    "strict": true,
    "newLine": "LF",
    "declaration": true,
    "sourceMap": true,
    "lib": [ "ES2019", "DOM" ],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "test/**/*.ts"
  ],
}
